[Unit]
Description=Flask web server
After=network.target

[Service]
User=pi
WorkingDirectory=/opt/modbus-gateway-flask
Environment="FLASK_APP=app.py"
ExecStart=/opt/modbus-gateway-flask/venv/bin/python3.9 /opt/modbus-gateway-flask/app.py --bind 0.0.0.0:8000
Restart=always

[Install]
WantedBy=multi-user.target
